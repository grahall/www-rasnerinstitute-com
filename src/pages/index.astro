import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  heroImage: string;
  mobilePhoneNumber: string;
  courseInfoLink: string;
  fullCalendarLink: string;
  newsletterSignupAction: string;
  doctorRasnerImage: string;
  speakerPacketLink: string;
  contactPhoneNumber: string;
  contactEmail: string;
  testimonials: Testimonial[];
}

interface Testimonial {
  imageSrc?: string;
  videoUrl?: string; // For video testimonials
  heading: string;
  tagline?: string; // For roles like "Chairman of CE"
  text?: string; // Main testimonial text
  authorImage?: string; // Image for the testimonial author
  authorImageAlt?: string;
  readMoreId?: string; // For expanding text, e.g., 'dots1', 'more1', 'myBtn1'
}

const {
  heroImage,
  mobilePhoneNumber,
  courseInfoLink,
  fullCalendarLink,
  newsletterSignupAction,
  doctorRasnerImage,
  speakerPacketLink,
  contactPhoneNumber,
  contactEmail,
  testimonials,
  ...rest
} = Astro.props;
---

<div class="dental-ce-rasner-institute-container" {...rest}>
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <div class="faces-wrapper">
    <img src={heroImage} style="width:100%; height:100%;" alt="Header" />

    <div class="main-menu">
      <div class="home">
        <div class="mobile-nav-wrap show-for-medium-down on-canvas clearfix">
          <a class="phone ppc-number" href={`tel:${mobilePhoneNumber}`}>{mobilePhoneNumber}</a>
          <a class="js-menu-toggle" href="#"><span class="title">Menu</span><span class="icon"></span></a>
        </div>
      </div>
    </div>
    <div class="info">
      <h3>HANDS - ON<br />LIVE PATIENT SURGICAL COURSES<br /></h3>
      <h4>with Dr. Steven Rasner</h4><br />
      <div><a href={courseInfoLink} class="btn">View Course info</a></div>
      <div><a href={fullCalendarLink} class="btn">View Full Calendar </a></div>
    </div>
  </div>

  <div class="subscribe-wide">
    <h1><span>Gain Real World Experience</span> so you can offer more to your patients and keep more production in-house</h1>

    <form class="subscribe" action={newsletterSignupAction}>
      <input type="submit" class="submit-btn" value="Sign Up For Our Newsletter" />
    </form>
  </div>

  <main aria-label="contentinfo" role="main" id="main-content">
    <div class="home-doc">
      <div class="row">
        <div class="media wow fadeIn" role="img" aria-label="Dr. Rasner" style={{ backgroundImage: `url(${doctorRasnerImage})` }}></div>
        <div class="inner wow fadeIn">
          <div class="lside">
            <h2 class="name">Bring Dr. Rasner <br />To Your Group</h2>
            <p class="tagline">
              <a href={speakerPacketLink} target="_blank" aria-label="Opens in a new tab" class="golden-btn">View Speaker's Packet</a>
            </p>
          </div>
          <div class="rside content">
            <p>
              As a full-time practicing dentist, Dr. Rasner delivers practice management courses that are loaded with real-world solutions. He also offers surgical courses that can be customized to meet the needs of your group.
            </p>
            <h2>
              Book Dr. Rasner for your next event! <a href={`tel:${contactPhoneNumber}`}>{contactPhoneNumber}</a> <br /> Email: <a href={`mailto:${contactEmail}`} style="color:#fff; text-decoration:none; font-size:20px;">{contactEmail}</a>
            </h2>
          </div>
        </div>
        <div class="background wow fadeIn" role="img" aria-label="Dr. Rasner"></div>
      </div>
    </div>

    <div class="slant slant-top"></div>
    <div class="spacer"></div>
  </main>

  <div style="text-align:center; display:inline-block; width:100%; margin:3% 0 0 0;">
    <div style="display:block; margin:0 auto; width:100%; max-width:1150px; padding:0 10px;">
      <div id="content-main">
        <div id="timeline" data-columns="3">
          {testimonials.map((testimonial) => (
            <div class="column size-1of4">
              <div class="item">
                <h4 class="box-heading">{testimonial.heading}</h4>
                {testimonial.tagline && <div class="box-tagline">{testimonial.tagline}</div>}
                {testimonial.videoUrl && (
                  <div style="display:inline-block; width:100%;">
                    <img
                      src={testimonial.imageSrc}
                      alt={testimonial.authorImageAlt || testimonial.heading}
                      tabindex="0"
                      class="lets-play"
                      data-video={testimonial.videoUrl}
                    />
                  </div>
                )}
                {testimonial.text && (
                  <p>
                    {testimonial.authorImage && (
                      <img
                        src={testimonial.authorImage}
                        alt={testimonial.authorImageAlt || testimonial.heading}
                        title={testimonial.authorImageAlt || testimonial.heading}
                        class="testi-img"
                      />
                    )}
                    {testimonial.readMoreId ? (
                      <>
                        <span id={`dots${testimonial.readMoreId}`}>...</span>
                        <span id={`more${testimonial.readMoreId}`}>&nbsp; {testimonial.text}</span>
                        <span id={`myBtn${testimonial.readMoreId}`} role="button" tabindex="0">Read more</span>
                      </>
                    ) : (
                      <>{testimonial.text}</>
                    )}
                  </p>
                )}
                 {!testimonial.text && testimonial.imageSrc && !testimonial.videoUrl && (
                    <img
                      src={testimonial.imageSrc}
                      alt={testimonial.authorImageAlt || testimonial.heading}
                      title={testimonial.authorImageAlt || testimonial.heading}
                      class="testi-img"
                    />
                 )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>

